<?php
class Booklet extends AppModel {
	public $name = 'Booklet';
	
	public $hasOne = array(
    	'PageData' => array(
        	'className'    => 'PageData',
        	'foreignKey'   => 'id',
        	'dependent'    => false
		)
    );
	
	public $hasAndBelongsToMany = array(
        'Chapter' =>
            array(
                'className'              => 'Chapter',
                'unique'                 => false, // the purpose of this arg is a bit unclear
            )
    );
}
?>
